{
  "name": "git-onchain-rewards-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Verifier service for git-onchain-rewards: validates GitHub events, pins IPFS evidence, and registers contributions on-chain.",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "migrate": "ts-node-dev --transpile-only src/db.ts migrate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.10.0",
    "express": "^4.19.2",
    "pg": "^8.11.5",
    "web3.storage": "^4.5.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.15.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
